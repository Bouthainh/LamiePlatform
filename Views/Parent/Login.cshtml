@model BadeePlatform.DTOs.LoginParentDTO
@{
    ViewData["Title"] = "ماهر - تسجيل الدخول";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- Load your compiled CSS (includes ALL Sass styles) -->
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    
    <!-- Cairo Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome for eye icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="login-body">

    <div class="login-container">
        <div class="login-left">
            <div class="login-illustration">
                <img src="~/images/Maher_Logo.png" alt="MaherLogo">
            </div>
        </div>
        <div class="login-right">
            <h1>مرحبا بعودتك إلى ماهر</h1>

            @if (TempData["RegisterSuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["RegisterSuccessMessage"]</div>
            }

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
            }

            <form method="POST" asp-controller="Parent" asp-action="Login">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input asp-for="UsernameOrEmail"
                           type="text"
                           placeholder="أدخل اسم المستخدم أو بريدك هنا"
                           required
                           minlength="3"
                           maxlength="100" />
                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password"
                           type="password"
                           placeholder="أدخل كلمة المرور هنا"
                           required
                           minlength="8"
                           maxlength="100" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="forgot-password">
                    <a href="#">نسيت كلمة المرور؟</a>
                </div>

                <button type="submit" class="login-button">سجل دخول</button>
            </form>

            <div class="signup-link">
                <p>
                    ليس لديك حساب؟
                    <a asp-controller="Parent" asp-action="Register">أنشئ الآن</a>
                </p>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>