@using BadeePlatform.Models.ViewModels
@model ParentProfileViewModel

@if (TempData["ProfileEditedSuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["ProfileEditedSuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="view-profile-page">
    <div class="main-container">
        <section class="main-content">
            <div class="profile-header">
                <h1>الملف الشخصي</h1>
            </div>

            <form asp-action="EditProfile" method="post">
                <input type="hidden" asp-for="ParentId" />

            <label>الاسم:</label>
            <input asp-for="ParentName" class="form-control" required maxlength="100" />

            <label>رقم الجوال:</label>
            <input asp-for="PhoneNumber" class="form-control"
             required maxlength="10" pattern="05\d{8}"
            title="يجب أن يبدأ رقم الجوال بـ 05 ويتكون من 10 أرقام" />

            <label>البريد الإلكتروني:</label>
            <input asp-for="Email" class="form-control" type="email"
           required maxlength="100" />

            <label>اسم المستخدم:</label>
            <input asp-for="Username" class="form-control"
           required minlength="3" maxlength="50" />

            <button type="submit">حفظ التغييرات</button>
</form>
        </section>
    </div>
</div>