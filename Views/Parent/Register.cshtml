@model BadeePlatform.DTOs.RegisterParentDTO
@using System.ComponentModel.DataAnnotations

@{
    ViewData["Title"] = "ماهر - تسجيل ولي أمر جديد";
    Layout = null; 
}


<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- Load your compiled CSS -->
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    
    <!-- Cairo Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="login-body">
<main>
    <div class="signup-container">
        <div class="signup-form-section">
            <div class="form-header">
                <h1>أهلاً بك في ماهر</h1>
                <p>أنشئ حسابك الآن</p>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
            </div>

            <form class="signup-form" asp-controller="Parent" asp-action="Register" method="POST">
                @Html.AntiForgeryToken()

                <div class="form-group full-width">
                    <label asp-for="ParentName">الاسم الكامل لولي الأمر</label>
                    <input asp-for="ParentName" type="text" placeholder="أدخل اسمك هنا" required />
                    <span asp-validation-for="ParentName" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="ParentId">الهوية الوطنية (رقم ولي الأمر)</label>
                        <input asp-for="ParentId" type="text" placeholder="10 أرقام" maxlength="10" required />
                        <span asp-validation-for="ParentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber">رقم الجوال</label>
                        <input asp-for="PhoneNumber" type="tel" placeholder="05xxxxxxxx" required />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Email">البريد الإلكتروني</label>
                        <input asp-for="Email" type="email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Username">اسم المستخدم</label>
                        <input asp-for="Username" type="text" placeholder="4-8 أحرف" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group full-width">
                        <label asp-for="Role">اختار دورك</label>
                        <select asp-for="Role" class="form-control" required>
                            <option value="">اختار دورك</option>
                            <option value="Mother">أم</option>
                            <option value="Father">أب</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label asp-for="Password">كلمة المرور</label>
                    <input asp-for="Password" type="password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group full-width">
                    <label asp-for="ConfirmPassword">تأكيد كلمة المرور</label>
                    <input asp-for="ConfirmPassword" type="password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>


                <div class="form-submit">
                    <button type="submit" class="signup-btn">سجل الآن</button>
                </div>

                <div class="login-link">
                    <p>لديك حساب؟ <a asp-controller="Parent" asp-action="Login">سجل الدخول</a></p>
                </div>
            </form>
        </div>

        <div class="illustration-section">
            <div class="character-container">
                <img src="~/images/ChildwPrize.png" alt="شخصية ماهر">
            </div>
        </div>
    </div>
</main>

</body>
<!-- Scripts MUST be before </body> when Layout = null -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</html>
